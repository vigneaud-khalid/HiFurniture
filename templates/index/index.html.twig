{% extends 'base.html.twig' %}

{% block title %} Index - {{ parent() }} {% endblock %}

{% block body %}
<div class="w3-content" style="max-width:2000px;margin-top:16px">

  <!-- The Band Section -->
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
 {% if user is defined and is_granted('ROLE_USER') %}
     <p class="w3-wide">Welcome, {{user.username}} ! <br> </p>
  {% endif %}
 {% if descriptor is defined %}
    <h2 class="w3-wide">HiLUXURY FURNITURE</h2>
    <h3 class="w3-opacity"><i><strong>{{descriptor.name}}</strong> : latest trend furniture for <b>{{ date|date('F Y ', 'Europe/Paris')
 }}</b></i></h3>
    <p class="w3-justify">We have created a large set of furniture with latest trend touch of design... 
    {{descriptor.description|nl2br}}  <br> </p>
  {% endif %}
<div class="w3-row w3-padding-32">

    {% for product in products %}
    <div class="w3-third">
        <p>{{product.name}}</p>
        <p>{{product.price}} $</p>
        <a href="{{path('product_display',{'productId': product.id} )}}">
        <img src="{{ asset('assets/img/' ~ product.name ~ '.jpg') }}" class="w3-round w3-margin-bottom" alt="picture of {{product.name}}" style="width:60%">
      </a>
      </div>

    
      {% endfor %}
    </div>
  </div>

  
</div>
{% endblock %}